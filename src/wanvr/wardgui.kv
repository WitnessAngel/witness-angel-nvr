<ItemDrawer>:
    theme_text_color: "Custom"
    on_release:
        self.parent.set_color_item(self)

    IconLeftWidget:
        id: icon
        icon: root.icon
        theme_text_color: "Custom"
        text_color: root.text_color

<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        size_hint_y: None
        height: avatar.height
        anchor_x: 'center'
        anchor_y: 'center'

        Image:
            id: avatar
            size_hint: None, None
            size: "150dp", "150dp"
            source: str(app.app_logo_path)

#    MDLabel:
#        text: "Witness Angel Ward NVR"
#        font_style: "Button"
#        size_hint_y: None
#        height: self.texture_size[1]

#    MDLabel:
#        text: "WitnessWard"
#        font_style: "Caption"
#        size_hint_y: None
#        height: self.texture_size[1]

    ScrollView:

        DrawerList:
            id: md_list

<MainWindow>:

    orientation: "vertical"
    canvas.before:
        Color:
            rgba: 0.1372, 0.2862, 0.5294, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: [0,20]

        MDToolbar:
            md_bg_color: (0.1372, 0.2862, 0.5294, 1)
            title: "Witness Angel Ward - NVR"
            elevation: 5
            left_action_items: [['menu', lambda x: app.nav_drawer.set_state("toggle")]]

            ActionButton:
                text: 'Settings'

                on_release:
                    app.open_settings()

        BoxLayout:
            size_hint: (1, None)
            height: 50
            spacing:  30
            padding: [10,10]
            Label:
                text: 'Recording'
                size: 150, 50
            CheckBox:
                size: 150, 50
                #size_hint: 0.4, 0.3
                id: switch
                active: False
                on_active:
                    app.switch_callback(self, self.active)

        Image:
            id: preview_image
            source: str(app.fallback_preview_image_path)
            size: (10, 10)     #self.texture_size if self.texture else (10, 10)
            allow_stretch: True
            keep_ratio: True
            nocache: True









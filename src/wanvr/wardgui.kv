NavigationLayout:

    WindowManager:

        id: screen_manager
        margin: (100, 0)

        MainWindow:
            name: "MainMenu"

        AuthenticationDeviceStoreScreen:
            name: "Keys_management"

        ContainerStoreScreen:
            name: "Container_management"

    MDNavigationDrawer:
        id: nav_drawer
        ContentNavigationDrawer:
            id: content_drawer


<Separator@Widget>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<VSeparator@Separator>:
    size_hint_y: None
    height: 20

<HSeparator@Separator>:
    size_hint_x: None
    width: 20



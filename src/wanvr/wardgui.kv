#        text: "WitnessWard"
#        font_style: "Caption"
#        size_hint_y: None
#        height: self.texture_size[1]

    ScrollView:

        DrawerList:
            id: md_list

<MainWindow>:

    orientation: "vertical"
    canvas.before:
        Color:
            rgba: 0.1372, 0.2862, 0.5294, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: [0,20]

        MDToolbar:
            md_bg_color: (0.1372, 0.2862, 0.5294, 1)
            title: "Witness Angel Ward - NVR"
            elevation: 5
            left_action_items: [['menu', lambda x: app.nav_drawer.toggle_nav_drawer()]]

            ActionButton:
                text: 'Settings'

                on_release:
                    app.open_settings()

        BoxLayout:
            size_hint: (1, None)
            height: 50
            spacing:  30
            padding: [20,20]
            Label:
                size_hint: 0.4, 0.3
                text: 'Recording'
            Switch:
                size: 150, 50
                size_hint: 0.4, 0.3
                id: switch
                active: False
                on_active:
                    app.switch_callback(self, self.active)

        Image:
            id: preview_image
            source: str(app.fallback_image_path)
            size: (10, 10)     #self.texture_size if self.texture else (10, 10)
            allow_stretch: True
            keep_ratio: True
            nocache: True


<SecondWindow>:

    canvas.before:
        Color:
            rgba: 0.1372, 0.2862, 0.5294, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: [0,20]

        MDToolbar:
            md_bg_color: (0.1372, 0.2862, 0.5294, 1)
            title: "Witness Angel"
            elevation: 10
            left_action_items: [['menu', lambda x: app.nav_drawer.toggle_nav_drawer()]]

            ActionButton:
                text: 'Home'

                on_release:
                    #app.screen_manager.transition.direction = "right"
                    app.screen_manager.current = "MainMenu"

        Label:
            size_hint: None, None
            size: 350, 40
            text: 'Key management'
            halign: "left"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            font_size: 24

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            bar_width: 10
            #bar_color: [1, 0, 1, 1]
            scroll_type: ["bars", "content"]

            GridLayout:
                size_hint_y: None
                orientation: 'vertical'
                id: device_table
                cols: 2
                row_default_height: 25
                row_force_default: True
                padding: 10
                spacing: (0, 10)
                height: self.minimum_height


        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'
            padding: [20, 20, 20, 20]
            height: 100
            size_hint_y: None
            Button:
                id: btn
                background_color: (51, 23, 186.0, 1)
                color: 0.1372, 0.2862, 0.5294, 1
                text: "Import new keys"
                size: 250, 50
                size_hint: None, None
                on_release:
                    app.import_keys()


<ThirdWindow>:

    on_pre_enter: app.get_detected_container()

    canvas.before:
        Color:
            rgba: 0.1372, 0.2862, 0.5294, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: [0,20]

        MDToolbar:
            md_bg_color: (0.1372, 0.2862, 0.5294, 1)
            title: "Witness Angel"
            elevation: 10
            left_action_items: [['menu', lambda x: app.nav_drawer.toggle_nav_drawer()]]

            ActionButton:
                text: 'Home'

                on_release:
                    app.screen_manager.current = "MainMenu"
                    #app.screen_manager.transition.direction = "right"

        Label:
            size_hint: None, None
            size: 350, 40
            text: 'Container management'
            halign: "right"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            font_size: 24

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            bar_width: 10
            #bar_color: [1, 0, 1, 1]
            scroll_type: ["bars", "content"]

            GridLayout:
                size_hint_y: None
                orientation: 'vertical'
                id: container_table
                cols: 2
                row_default_height: 25
                row_force_default: True
                padding: 10
                spacing: (0, 10)
                height: self.minimum_height

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'
            padding: [20, 60, 20, 0]
            height: 50
            size_hint_y: None

            BoxLayout:

                Button:
                    id: delete
                    background_color: (51, 23, 186.0, 1)
                    color: 0.1372, 0.2862, 0.5294, 1
                    text: "Refresh"
                    #size: 200, 50
                    size_hint: 0.3, None
                    disabled: False
                    height: 30
                    on_release:
                        app.get_detected_container()

                Button:
                    id: delete
                    background_color: (51, 23, 186.0, 1)
                    color: 0.1372, 0.2862, 0.5294, 1
                    text: "Delete"
                    #size: 200, 50
                    size_hint: 0.3, None
                    disabled: False
                    height: 30
                    on_release:
                        app.open_dialog_delete_container()

                Button:
                    id: decipher
                    background_color: (51, 23, 186.0, 1)
                    color: 0.1372, 0.2862, 0.5294, 1
                    text: "Decrypt"
                    #size: 200, 50
                    size_hint: 0.3, None
                    disabled: False
                    height: 30
                    on_release:
                        app.open_dialog_decipher_container()









